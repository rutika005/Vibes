<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_player"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="bottom"
    android:background="#00E5FF">

    <ImageView
        android:id="@+id/songImg"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:src="@drawable/nadaniya"
        android:scaleType="fitXY"/>

    <!-- Song Title and Artist -->
    <TextView
        android:id="@+id/currentSongTitle"
        android:layout_width="198dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:text="Nadaniya"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/currentArtistName"
        android:layout_width="128dp"
        android:layout_height="20dp"
        android:layout_below="@+id/currentSongTitle"
        android:layout_marginStart="90dp"
        android:text="Akshath"
        android:textColor="#000000"
        android:textSize="15sp" />

    <!-- Like Button -->
    <ImageView
        android:id="@+id/likeButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/heart"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="56dp"
        app:tint="@color/black" />

    <!-- Play Button -->
    <ImageButton
        android:id="@+id/btnPlayPause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_media_play"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#00FFFFFF"
        app:tint="@color/black" />

    <SeekBar
        android:id="@+id/songSeekBar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignStart="@+id/songImg"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-2dp" />
</RelativeLayout>
