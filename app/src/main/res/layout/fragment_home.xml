<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".fragments.Fragment_home">

    <!-- Profile and Notification Icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

            <!-- Profile Icon -->
            <ImageView
                android:id="@+id/profileimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icons8_male_user_50"
                android:layout_marginEnd="250dp"/>

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icons8_notification_30"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="70dp"> <!-- Adjust margin to fit fixed headers -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Made For You Text -->
        <TextView
            android:id="@+id/madeForYouText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made For You"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="16dp" />

        <!-- Bollywood Covers Image -->
        <ImageView
            android:id="@+id/bollywoodCoversImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/bollywood"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_play"
            android:layout_gravity="right"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="-50dp"
            android:tintMode="multiply"
            android:backgroundTint="#00FFFFFF"
            app:tint="@color/black" />

        <!-- Most Played Section Title -->
        <TextView
            android:id="@+id/mostPlayedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Played"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp" />

        <ImageButton
            android:id="@+id/imgbtnRight1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:layout_gravity="right"
            android:layout_marginTop="-35dp"
            android:src="@drawable/icons8_forward_26"/>

        <!-- Most Played Songs - Horizontal ScrollView -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fristSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/topSearch1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/with_you"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="With You"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AP Dhillon"
                        android:textColor="#80000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/secoundSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/topSearch2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/heeriye"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heeriye"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/artist"
                        android:textColor="#80000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thirdSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/topSearch3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/edsheeran"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perfect"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ED Sheern"
                        android:textColor="#80000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forthSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/topSearch4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/sajni"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sajni"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arijit Singh"
                        android:textColor="#80000000"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

    <!-- Trending Now Section Title -->
    <TextView
        android:id="@+id/trendingNowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trending Now"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp" />

        <ImageButton
            android:id="@+id/imgbtnRight2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:layout_gravity="right"
            android:layout_marginTop="-35dp"
            android:src="@drawable/icons8_forward_26"/>

        <!-- Trending Now Songs - Horizontal ScrollView -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fristAlbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/topSearch5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ek_tha_raja"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ek Tha Raja"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Badshah"
                        android:textColor="#80000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/secoundAlbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/topSearch6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/animal"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Animal"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/artist1"
                        android:textColor="#80000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thirdAlbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/topSearch7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/still_rollin"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Still Rollin"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shubh"
                        android:textColor="#80000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forthAlbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/topSearch8"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/charli"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See You Again"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Charlie Puth"
                        android:textColor="#80000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    </ScrollView>

        <!-- Bottom Player Section -->
        <RelativeLayout
            android:id="@+id/bottomPlayer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="#00E5FF">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:src="@drawable/nadaniya"
                android:scaleType="fitXY"/>
            <!-- Song Title and Artist -->
            <TextView
                android:id="@+id/songTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="Nadaniya"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/songartist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/songTitle"
                android:layout_marginStart="80dp"
                android:text="Akshath"
                android:textColor="#000000"
                android:textSize="10sp" />

            <!-- Like Button -->
            <ImageView
                android:id="@+id/likeButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="56dp"
                app:tint="@color/black" />

            <!-- Play Button -->
            <ImageView
                android:id="@+id/playButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_media_play"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                app:tint="@color/black" />

        </RelativeLayout>

</FrameLayout>