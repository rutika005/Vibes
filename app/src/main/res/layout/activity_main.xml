<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_background"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/circle1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="@color/circle1"
        android:layout_marginTop="80dp"
        android:layout_marginStart="50sp"/>

    <View
        android:id="@+id/circle2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/circle1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="@color/circle2"
        />

    <View
        android:id="@+id/circle3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="240dp"
        android:layout_marginStart="-50dp"
        android:layout_toEndOf="@+id/circle1"
        android:background="@drawable/circle_shape"
        android:backgroundTint="@color/circle3" />

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="235dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/girl_with_headphones" />

    <TextView
        android:id="@+id/tvvibes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imglogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/Vibes"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btngetstarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvvibes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#7069F2"
        android:fontFamily="@font/roboto"
        android:text="Get Started"
        android:textColor="@android:color/white" />

    </RelativeLayout>