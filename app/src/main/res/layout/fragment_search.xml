<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#66FFFFFF"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Track name, artists, albums"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:textSize="16sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:cursorVisible="true"/>

        <ImageView
            android:id="@+id/closeSearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/black" />
    </LinearLayout>

    <!-- Search Categories (Chips) -->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top"
            android:backgroundTint="#5A67D8"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artists"
            android:backgroundTint="#5A67D8"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Songs"
            android:backgroundTint="#5A67D8"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlists"
            android:backgroundTint="#5A67D8"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Albums"
            android:backgroundTint="#5A67D8"
            android:textColor="#FFFFFF" />
    </LinearLayout>
    </HorizontalScrollView>
    <!-- Top Searches Title -->
    <TextView
        android:id="@+id/topSearchesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Searches"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="16dp" />

    <!-- Top Searches (Horizontal ScrollView) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginStart="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/topSearch1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With You"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AP Dhillon"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/topSearch2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heeriye"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/artist"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/topSearch3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See You Again"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Charlie Puth"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Recently Searched Title -->
    <TextView
        android:id="@+id/recentlySearchedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently searched"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="16dp" />

    <!-- Recently Searched Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="450dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/recentIcon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/black"
                android:src="@android:drawable/ic_menu_recent_history" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nadaniya"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/deleteIcon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/black"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
        </LinearLayout>

        <!-- Add similar blocks for other recently searched items -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/recentIcon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/black"
                android:src="@android:drawable/ic_menu_recent_history" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Where Are U Now"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/deleteIcon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/black"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>