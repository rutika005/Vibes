<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#66FFFFFF"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Track name, artists, albums"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColorHint="#80FFFFFF"
            android:textSize="16sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:cursorVisible="true"/>

        <ImageView
            android:id="@+id/closeSearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/black" />
    </LinearLayout>

    <!-- Search Categories (Chips) -->
    <HorizontalScrollView
        android:id="@+id/searchCategories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#34FFFFFF"
                android:text="Top"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#34FFFFFF"
                android:text="Artists"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#34FFFFFF"
                android:text="Songs"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#34FFFFFF"
                android:text="Playlists"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#34FFFFFF"
                android:text="Albums"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Top Searches Title -->
    <TextView
        android:id="@+id/topSearchesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Searches"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/searchCategories"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp" />

    <!-- Top Searches (Horizontal ScrollView) -->
    <HorizontalScrollView
        android:id="@+id/topSearchesScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topSearchesText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/fristSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/topSearch1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/with_you"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With You"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AP Dhillon"
                    android:textColor="#80000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secoundSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/topSearch2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/heeriye"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heeriye"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/artist"
                    android:textColor="#80000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/topSearch3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/edsheeran"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfect"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ED Sheern"
                    android:textColor="#80000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/forthSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/topSearch4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sajni"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sajni"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arijit Singh"
                    android:textColor="#80000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Add the remaining top search items here in similar blocks -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Recently Searched Title -->
    <TextView
        android:id="@+id/recentlySearchedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently searched"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/topSearchesScroll"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp" />

    <!-- Recently Searched Items -->
    <LinearLayout
        android:id="@+id/recentlySearchedItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/recentlySearchedText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/recentIcon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_recent_history"
                app:tint="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nadaniya"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/deleteIcon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/recentIcon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/black"
                android:src="@android:drawable/ic_menu_recent_history" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Where Are U Now"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/deleteIcon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/black"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
        </LinearLayout>

        <!-- Add similar blocks for other recently searched items -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
